<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:foregroundGravity="fill"
    tools:context="uk.co.mishurov.termik.MainActivity">

    <uk.co.mishurov.termik.TermView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_surface" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right|center"
                  android:id="@+id/linear"
                  android:clipChildren="false"
                  android:clipToPadding="false"
                  android:orientation="vertical" >
        <TextView android:id="@+id/heading"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#fff"
                  android:text="Analysis: Match:" />
        <TextView android:id="@+id/guess_first"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#fff"
                  android:text="Calculating..." />
        <TextView android:id="@+id/guess_second"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#fff"
                  android:text="Calculating..." />
        <TextView android:id="@+id/guess_third"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#fff"
                  android:text="Calculating..." />
    </LinearLayout>
</FrameLayout>
